<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:WpfApp1.controls"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="649" Width="1028">
    <Grid ShowGridLines="False" Height="591" Margin="53,0,10,0" RenderTransformOrigin="0.503,0.511">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="295*"/>
            <RowDefinition Height="282*"/>
        </Grid.RowDefinitions>




        <Canvas RenderTransformOrigin="0.072,0.5" Background="White" Margin="0,10,164,208" Grid.ColumnSpan="2">

            <Controls:oxyplot x:Name="plot" Margin="10,10,-14,-154" Canvas.Left="266" Canvas.Top="108" Width="390" Height="296" RenderTransformOrigin="0.5,0.5" >
                <Controls:oxyplot.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.146"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Controls:oxyplot.RenderTransform>
            </Controls:oxyplot>



            <Controls:atributes x:Name="Attributes" RenderTransformOrigin="0.612,0.541" Grid.Column="1" Grid.Row="1" Canvas.Top="210" Canvas.Left="758"/>
            <Controls:FilesDialog x:Name="FilesDialog" Margin="10,0,190,305" Width="781"/>
            <Controls:AnomalyReportList x:Name="AnomalyReportList" Canvas.Left="-45" Height="602" Width="53" Canvas.Top="-31"/>
            <Controls:theJoystick Margin="290,144,941,425" Grid.Row="1" Grid.Column="1" Canvas.Left="-282" Canvas.Top="-17" />
            <Button x:Name="PlayButton" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="49" Width="52" Canvas.Top="506" Canvas.Left="165" Click="PlayButton_Click" Background="White">
                <Image Source="playImg2.GIF" Canvas.Left="150" Canvas.Top="-16" Height="45" Width="58" RenderTransformOrigin="5.292,0.311" />
            </Button>
            <Button x:Name="PauseButton" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="49" Width="52" Background="White" Canvas.Top="506" Canvas.Left="217" Click="PauseButton_Click">
                <Image Source="Pause.GIF" Canvas.Left="150" Canvas.Top="-16" Height="45" Width="58" RenderTransformOrigin="5.292,0.311" />
            </Button>
            <Button x:Name="FastForwardButton" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="49" Width="52" Background="White" Canvas.Top="506" Canvas.Left="321" Click="FastForwardButton_Click">
                <Image Source="FastForward.GIF" Canvas.Left="150" Canvas.Top="-16" Height="45" Width="58" RenderTransformOrigin="5.292,0.311" />
            </Button>
            <Button x:Name="StopButton" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="49" Width="52" Background="White" Canvas.Top="506" Canvas.Left="269" Click="StopButton_Click">
                <Image Source="Stop.GIF" Canvas.Left="150" Canvas.Top="-16" Height="45" Width="58" RenderTransformOrigin="5.292,0.311" />
            </Button>
            <Button x:Name="FastBackwardsButton" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="49" Width="52" Background="White" Canvas.Top="506" Canvas.Left="108" Click="FastBackwardsButton_Click">
                <Image  Source="Backwards.GIF" Canvas.Left="150" Canvas.Top="-16" Height="45" Width="58" RenderTransformOrigin="5.292,0.311" />
            </Button>
            <TextBlock FontSize="24" Canvas.Left="382" Canvas.Top="506" Text="Play Speed" TextWrapping="Wrap" Height="49" Width="124"/>
            <TextBox x:Name="pSTextBox" Canvas.Left="511" Canvas.Top="506" Text="{Binding VM_PlaySpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Width="48" Height="25"/>
            <TextBlock x:Name="timeTextBlock" Canvas.Left="564" Canvas.Top="506" Visibility="Visible" Text="{Binding VM_Time}" TextWrapping="Wrap" Height="29" Width="90"/>
            <Controls:controlPanel RenderTransformOrigin="0.627,0.288" Height="200" Canvas.Left="33" Canvas.Top="301" Width="228"/>


        </Canvas>
        <Slider x:Name="Slider" Value="{Binding VM_LineRatio, Mode=TwoWay}" Minimum="0" Maximum="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="712" Height="26" Margin="44,268,0,0" Grid.ColumnSpan="2" Grid.Row="1"/>

    </Grid>
</Window>
