<UserControl x:Class="WpfApp1.controls.AlgorithmSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox>
            <Button x:Name="Simple" Content="Simple Anomaly Detection" Click="Simple_Click" DragOver="Simple_DragOver"/>
            <Button x:Name="Hybrid" Content="Hybrid Anomaly Detection" Click="Hybrid_Click" DragOver="Hybrid_DragOver"/>
            <Button x:Name="Other" Content="Other Anomaly Detection" Click="Other_Click" DragOver="Other_DragOver"/>
                
            <TextBox x:Name="dllBox" Text="DLL File Name" TextWrapping="Wrap" Width="141"/>
        </ListBox>  
    </Grid>
</UserControl>
